extends ../nav.pug

block content
  //- Form Container
  div(class='w-full bg-b')
    include ../mixins.pug
    +title("Add New Doctor") 
    form(method='post' enctype="multipart/form-data" action='/doctors/add' class="bg-primary text-white w-1/2 mx-auto")

      //- Doctor's Name
      div(class='')
        input(type='text', placeholder="name" id='name' name='name' required class='w-full bg-primary p-2 border border-gray-300  focus:outline-none')

      div(class="grid grid-cols-2 grid-rows-1")
        //- Image
        div(class='flex justify-center items-center ')
          input(type='file', id='img', name='img', accept='image/*', required, class='w-full mx-auto p-2 border border-gray-300 rounded')
        //- sp_id
        div(class=' flex')
          select(id='sp_id' name='sp_id' required class='w-full p-2 bg-primary h-full border border-gray-300  focus:outline-none')
            each sp, index in specialities
              option(value=sp.id) #{sp.title}

      //- Contacts Information
      div(class="grid grid-cols-2")
        //- Phone (Inside contacts)
        div(class='')
          input(type='text' placeholder="phone" id='phone' name='contacts.phone' required class='w-full bg-primary p-2 border border-gray-300  focus:outline-none')

        //- Facebook (Inside contacts)
        div(class='')
          input(type='text' placeholder="facebook" id='facebook' name='contacts.facebook' class='w-full bg-primary p-2 border border-gray-300  focus:outline-none')

      div(class="grid grid-cols-2")
        //- LinkedIn (Inside contacts)
        div(class='')
          input(type='text' placeholder="linkedin" id='linkedin' name='contacts.linkedin' class='w-full bg-primary p-2 border border-gray-300  focus:outline-none')

        //- Instagram (Inside contacts)
        div(class='')
          input(type='text' placeholder="instagram" id='instagram' name='contacts.instagram' class='w-full bg-primary p-2 border border-gray-300  focus:outline-none')

      //- Resume
      div(class='flex')
        textarea(id='resume' placeholder="resume" name='resume' rows='4' required class='w-full bg-primary p-2 border border-gray-300  focus:outline-none')

      //- Submit Button
      div(class='flex justify-end')
        button(type='submit' class='bg-accent uppercase text-white px-4 py-2 w-full duration-300  hover:bg-secondary') Submit
